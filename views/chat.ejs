<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatroom â€¢ Live</title>
    <script>
        const username = "<%= username %>";
    </script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#6366f1',
                        'primary-dark': '#4f46e5'
                    }
                }
            }
        }
    </script>
</head>
<body class="h-full bg-gradient-to-br from-indigo-50 via-white to-purple-50 flex flex-col">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
        <div class="max-w-6xl mx-auto flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <i class="fas fa-comments text-primary text-2xl"></i>
                <h1 class="text-2xl font-bold text-gray-800">Chatroom</h1>
            </div>
            <div class="flex items-center space-x-2 text-sm">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-gray-600 font-medium">Live</span>
            </div>
        </div>
    </header>

    <!-- Messages Area -->
    <div id="messages" class="flex-1 overflow-y-auto px-4 py-6 space-y-4 max-w-6xl mx-auto w-full">
        <% messages.forEach(m => { %>
            <div class="flex items-end space-x-3 group <%= m.username === username ? 'flex-row-reverse space-x-reverse' : '' %>">
                <!-- Avatar -->
                <div class="flex-shrink-0">
                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center text-white font-bold text-sm shadow-lg">
                        <%= m.username.charAt(0).toUpperCase() %>
                    </div>
                </div>

                <!-- Message Bubble -->
                <div class="max-w-xs lg:max-w-md <%= m.username === username ? 'items-end' : 'items-start' %>">
                    <div class="px-4 py-3 rounded-2xl shadow-md <%= m.username === username 
                        ? 'bg-primary text-white rounded-br-none' 
                        : 'bg-white text-gray-800 border border-gray-200 rounded-bl-none' %>">
                        <% if (m.username !== username) { %>
                            <p class="text-xs font-semibold opacity-80 mb-1"><%= m.username %></p>
                        <% } %>
                        <p class="text-sm leading-relaxed"><%= m.message %></p>
                        <p class="text-xs mt-1 <%= m.username === username ? 'text-indigo-100' : 'text-gray-500' %>">
                            <%= new Date(m.timestamp || Date.now()).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>

        <!-- Scroll to bottom helper -->
        <div id="bottom-anchor"></div>
    </div>

    <!-- Input Area -->
    <div class="bg-white border-t border-gray-200 px-4 py-5">
        <div class="max-w-6xl mx-auto">
            <div class="flex items-center space-x-3">
                <input
                    id="msg"
                    type="text"
                    placeholder="Type a message..."
                    autocomplete="off"
                    class="flex-1 px-5 py-3 bg-gray-100 rounded-full focus:outline-none focus:ring-2 focus:ring-primary focus:bg-white transition-all duration-200 placeholder-gray-500 text-gray-800"
                >
                <button
                    onclick="sendMessage()"
                    class="bg-primary hover:bg-primary-dark text-white p-3.5 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200"
                >
                    <i class="fas fa-paper-plane text-lg"></i>
                </button>
            </div>
            <p class="text-xs text-gray-500 text-center mt-3">
                You are logged in as <span class="font-semibold text-primary"><%= username %></span>
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Inline username script -->

<script src="/socket.io/socket.io.js"></script>
<script src="/chat.js"></script>

</body>
</html>
