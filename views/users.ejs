<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin: User Management</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    .table-row:hover {
      background-color: #f3f4f6;
      transition: background-color 0.2s;
    }
    .btn-danger:hover {
      background-color: #dc2626;
    }
    .btn-success:hover {
      background-color: #16a34a;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-10">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
      <h1 class="text-4xl font-bold text-gray-900">
        <i class="fas fa-users-cog mr-3 text-indigo-600"></i>
        User Management
      </h1>
      <a href="/" class="text-indigo-600 hover:text-indigo-800 font-medium">
        ‚Üê Back to Admin Dashboard
      </a>
    </div>

    <!-- Empty State -->
    <% if (users.length === 0) { %>
      <div class="text-center py-16 bg-white rounded-xl shadow-sm border border-gray-200">
        <i class="fas fa-users text-6xl text-gray-300 mb-4"></i>
        <p class="text-xl text-gray-600">No users found.</p>
      </div>
    <% } else { %>
      <!-- Users Table -->
      <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
              <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Username</th>
                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Email</th>
                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% users.forEach(user => { %>
              <tr class="table-row">
                <td class="px-6 py-5 text-sm font-medium text-gray-900">
                  <%= user.username %>
                </td>
                <td class="px-6 py-5 text-sm text-gray-600">
                  <%= user.email %>
                </td>
                <td class="px-6 py-5 text-center">
                  <% if (user.isAllowed) { %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-2"></i> Approved
                    </span>
                  <% } else { %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-2"></i> Pending
                    </span>
                  <% } %>
                </td>
                <td class="px-6 py-5 text-center text-sm">
                  <!-- Toggle Approve/Revoke -->
                  <form action="/admin/toggle/<%= user._id %>" method="POST" class="inline">
                    <button type="submit"
                            class="<%= user.isAllowed ? 'bg-orange-500 hover:bg-orange-600' : 'bg-green-600 hover:bg-green-700' %> text-white font-medium py-2 px-4 rounded-lg shadow transition">
                      <i class="fas <%= user.isAllowed ? 'fa-ban' : 'fa-check' %> mr-2"></i>
                      <%= user.isAllowed ? "Revoke" : "Approve" %>
                    </button>
                  </form>

                  <!-- Delete -->
                  <form action="/admin/delete/<%= user._id %>" method="POST" class="inline ml-3">
                    <button type="submit"
                            onclick="return confirm('Are you sure you want to permanently delete this user?')"
                            class="bg-red-600 hover:btn-danger text-white font-medium py-2 px-4 rounded-lg shadow transition">
                      <i class="fas fa-trash-alt mr-2"></i>
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Summary Footer -->
      <div class="mt-8 text-center text-gray-600">
        <p>Total users: <strong><%= users.length %></strong></p>
      </div>
    <% } %>
  </div>
</body>
</html>